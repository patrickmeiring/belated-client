<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/scrollLayout"
            android:layout_width="match_parent"
            android:layout_height="329dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="7dp" >

            <TextView
                android:id="@+id/txtMeetingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading..."
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/txtMeetingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_blue_dark" />

            <TextView
                android:id="@+id/txtMeetingLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/holo_blue_dark" />

            <TextView
                android:id="@+id/txtMeetingDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

            <RelativeLayout
                android:id="@+id/layoutWalking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" >
              <!-- android:visibility="invisible"   --> 

                <TextView
                    android:id="@+id/txtWalkingHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:text="Walking"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/btnWalking"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="14dp"
                    android:enabled="false"
                    android:text="Go" />

                <TextView
                    android:id="@+id/txtWalkingDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtWalkingHeader"
                    android:layout_below="@+id/txtWalkingHeader"
                    android:text="32 mins / 10 km"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#00F" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutDriving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" 
                >
              <!-- android:visibility="invisible"   --> 

                <TextView
                    android:id="@+id/txtDrivingHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:text="Driving"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/btnDriving"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="14dp"
                    android:enabled="false"
                    android:text="Go" />

                <TextView
                    android:id="@+id/txtDrivingDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtDrivingHeader"
                    android:layout_below="@+id/txtDrivingHeader"
                    android:text="32 mins / 10 km"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#B0B" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutTransit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible" 
                >
              <!--   --> 

                <TextView
                    android:id="@+id/txtTransitHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:text="Transit"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/btnTransit"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="14dp"
                    android:enabled="false"
                    android:text="Go" />

                <TextView
                    android:id="@+id/txtTransitDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtTransitHeader"
                    android:layout_below="@+id/txtTransitHeader"
                    android:text="32 mins / 10 km"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#F00" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/layoutOnline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >
              <!-- android:visibility="invisible"   --> 

                <TextView
                    android:id="@+id/txtOnlineHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:text="Online"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/btnOnline"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="14dp"
                    android:enabled="true"
                    android:text="Join" />

                <TextView
                    android:id="@+id/txtOnlineDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/txtOnlineHeader"
                    android:layout_below="@+id/txtOnlineHeader"
                    android:text="via Google Hangout"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#666" />

            </RelativeLayout>
            

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/txvServiceHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="@string/service_control_heading" />

            <Switch
                android:id="@+id/switchBackgroundService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:text="@string/location_service" />

            <TextView
                android:id="@+id/txvServiceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/service_control_description" />

            <TextView
                android:id="@+id/txvServiceAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/txtServiceAddress"
                android:layout_alignLeft="@+id/txtServiceAddress"
                android:text="@string/service_ip" />

            <EditText
                android:id="@+id/txtServiceAddress"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:ems="10"
                android:hint="@string/service_ip_description" />

            <TextView
                android:id="@+id/txtEmailAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Email_label" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:ems="10"
                android:inputType="textEmailAddress" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>