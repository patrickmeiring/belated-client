<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txvServiceHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/service_control_heading" />

    <Switch
        android:id="@+id/switchBackgroundService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txvServiceHeader"
        android:layout_alignRight="@+id/txvServiceHeader"
        android:layout_below="@+id/txvServiceHeader"
        android:layout_marginTop="16dp"
        android:text="@string/location_service" />

    <TextView
        android:id="@+id/txvServiceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/switchBackgroundService"
        android:layout_below="@+id/switchBackgroundService"
        android:layout_marginTop="14dp"
        android:text="@string/service_control_description" />

    <EditText
        android:id="@+id/txtServiceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtEmail"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtEmail"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:hint="@string/demoBelatedURL" />

    <TextView
        android:id="@+id/txvServiceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtServiceAddress"
        android:layout_alignLeft="@+id/txtServiceAddress"
        android:text="@string/service_url" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txvServiceAddress"
        android:layout_alignLeft="@+id/txvServiceDescription"
        android:layout_alignRight="@+id/switchBackgroundService"
        android:layout_marginBottom="26dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/txvEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtEmail"
        android:layout_alignLeft="@+id/txtEmail"
        android:text="@string/Email_label" />

</RelativeLayout>